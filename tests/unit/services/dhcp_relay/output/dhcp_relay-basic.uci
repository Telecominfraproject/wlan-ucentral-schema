
# DHCP-relay service configuration

set firewall.dhcp_relay=rule
set firewall.dhcp_relay.name='Allow-DHCP-Relay'
set firewall.dhcp_relay.src=''upstream''
set firewall.dhcp_relay.dest_port='67'
set firewall.dhcp_relay.family='ipv4'
set firewall.dhcp_relay.proto='udp'
set firewall.dhcp_relay.target='ACCEPT'

set dhcprelay.relay=bridge
set dhcprelay.relay.name=up
add_list dhcprelay.relay.vlans=100
add_list dhcprelay.relay.vlans=200
add_list dhcprelay.relay.upstream=eth0
add_list dhcprelay.relay.upstream=eth1
set dhcprelay.vlan100=config
set dhcprelay.vlan100.server='192.168.100.1'
set dhcprelay.vlan100.circuit_id='circuit-%i'
set dhcprelay.vlan100.remote_id='remote-%m'
set dhcprelay.vlan200=config
set dhcprelay.vlan200.server='192.168.200.1'
set dhcprelay.vlan200.circuit_id=
set dhcprelay.vlan200.remote_id=
