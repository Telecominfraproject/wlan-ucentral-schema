set system.ntp.enable_server=1
set system.ntp.use_dhcp=0
delete system.ntp.server
add_list system.ntp.server='pool.ntp.org'
add_list system.ntp.server='time.google.com'

add firewall rule
set firewall.@rule[-1].name='Allow-ntp-upstream'
set firewall.@rule[-1].src='upstream'
set firewall.@rule[-1].dest_port='123'
set firewall.@rule[-1].proto='udp'
set firewall.@rule[-1].target='ACCEPT'

add firewall rule
set firewall.@rule[-1].name='Allow-ntp-downstream'
set firewall.@rule[-1].src='downstream'
set firewall.@rule[-1].dest_port='123'
set firewall.@rule[-1].proto='udp'
set firewall.@rule[-1].target='ACCEPT'